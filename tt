        // Shopping cart
        let shoppingCart = [];

        // NEW AUTH FUNCTIONALITY
        const authPage = document.getElementById('auth-page');
        const mainWebsite = document.getElementById('main-website');
        const welcomeAnimation = document.getElementById('welcome-animation');
        const logoutBtn = document.getElementById('logoutBtn');

        // Check if user is already logged in
        const isLoggedIn = localStorage.getItem('cuBazarLoggedIn') === 'true';

        if (isLoggedIn) {
            welcomeAnimation.style.display = 'flex';
            setTimeout(() => {
                showMainWebsite();
            }, 3000);
        } else {
            authPage.style.display = 'flex';
        }

        // Tabs
        const tabs = document.querySelectorAll(".tab");
        const forms = {
            "login-form": document.getElementById("login-form"),
            "signup-form": document.getElementById("signup-form"),
        };
        const tabIndicator = document.getElementById("tab-indicator");
        const tabCaption = document.getElementById("tab-caption");

        function activateTab(targetId) {
            tabs.forEach((tab) => {
                const isActive = tab.dataset.target === targetId;
                tab.classList.toggle("active", isActive);
            });

            Object.keys(forms).forEach((id) => {
                forms[id].classList.toggle("active", id === targetId);
            });

            if (targetId === "login-form") {
                tabIndicator.classList.remove("signup");
                tabCaption.textContent = "Login to continue your deals";
            } else {
                tabIndicator.classList.add("signup");
                tabCaption.textContent = "Create a new CU Bazar account";
            }
        }

        tabs.forEach((tab) => {
            tab.addEventListener("click", () => {
                activateTab(tab.dataset.target);
            });
        });

        document.querySelectorAll("[data-switch]").forEach((btn) => {
            btn.addEventListener("click", () => {
                const target = btn.dataset.switch === "signup" ? "signup-form" : "login-form";
                activateTab(target);
            });
        });

        // Floating label + focus class
        document.querySelectorAll(".input-group input").forEach((input) => {
            const group = input.parentElement;

            input.addEventListener("focus", () => {
                group.classList.add("focused");
            });

            input.addEventListener("blur", () => {
                if (!input.value) {
                    group.classList.remove("focused");
                }
            });
        });

        // Login form submission
        document.getElementById("login-form").addEventListener("submit", (e) => {
            e.preventDefault();
            
            const loginBtn = document.querySelector('[data-btn-type="login"]');
            const label = loginBtn.querySelector(".btn-label");
            const original = label.textContent;

            loginBtn.classList.add("loading");
            label.textContent = "Logging in...";

            setTimeout(() => {
                const username = document.getElementById("login-username").value;
                const password = document.getElementById("login-password").value;
                
                // Simple validation
                if (username && password) {
                    // In a real app, this would validate credentials with a server
                    localStorage.setItem('cuBazarLoggedIn', 'true');
                    localStorage.setItem('cuBazarUser', username);
                    welcomeAnimation.style.display = 'flex';
                    authPage.style.display = 'none';
                    setTimeout(() => {
                        showMainWebsite();
                    }, 3000);
                } else {
                    alert('Please enter both username and password');
                }
                
                loginBtn.classList.remove("loading");
                label.textContent = original;
            }, 1300);
        });

        // Signup form submission
        document.getElementById("signup-form").addEventListener("submit", (e) => {
            e.preventDefault();
            
            const signupBtn = document.querySelector('[data-btn-type="signup"]');
            const label = signupBtn.querySelector(".btn-label");
            const original = label.textContent;

            signupBtn.classList.add("loading");
            label.textContent = "Creating...";

            setTimeout(() => {
                const name = document.getElementById("signup-name").value;
                const email = document.getElementById("signup-email").value;
                const password = document.getElementById("signup-password").value;
                const confirmPassword = document.getElementById("signup-confirm").value;
                
                // Simple validation
                if (name && email && password && confirmPassword) {
                    if (password !== confirmPassword) {
                        alert('Passwords do not match');
                        signupBtn.classList.remove("loading");
                        label.textContent = original;
                        return;
                    }
                    
                    // In a real app, this would create a new user account
                    localStorage.setItem('cuBazarLoggedIn', 'true');
                    localStorage.setItem('cuBazarUser', email);
                    welcomeAnimation.style.display = 'flex';
                    authPage.style.display = 'none';
                    setTimeout(() => {
                        showMainWebsite();
                    }, 3000);
                } else {
                    alert('Please fill in all fields');
                }
                
                signupBtn.classList.remove("loading");
                label.textContent = original;
            }, 1300);
        });

        // Social login buttons
        document.querySelectorAll(".social-btn").forEach(btn => {
            btn.addEventListener("click", () => {
                alert("Social login would be implemented here in a real application");
            });
        });

        // Logout functionality
        logoutBtn.addEventListener('click', () => {
            localStorage.removeItem('cuBazarLoggedIn');
            localStorage.removeItem('cuBazarUser');
            showAuthPage();
        });

        // Show main website after login
        function showMainWebsite() {
            welcomeAnimation.style.display = 'none';
            authPage.style.display = 'none';
            mainWebsite.style.display = 'flex';
            
            // Show search bar and content rows
            document.getElementById('search-container').style.display = 'block';
            document.getElementById('featured-items').style.display = 'block';
            document.getElementById('popular-categories').style.display = 'block';
            
            // Populate content
            populateFeaturedItems();
            populateCategoriesPreview();
            updateCartCount();
        }

        // Show auth page (for logout)
        function showAuthPage() {
            authPage.style.display = 'flex';
            mainWebsite.style.display = 'none';
        }

        // Populate featured items
        function populateFeaturedItems() {
            const container = document.getElementById('featured-items-container');
            container.innerHTML = '';
            
            sampleItems.forEach(item => {
                const card = document.createElement('div');
                card.className = 'card';
                card.setAttribute('data-item', item.id);
                
                card.innerHTML = `
                    <img src="${item.image}" alt="${item.title}" class="card-image">
                    <div class="card-content">
                        <h3 class="card-title">${item.title}</h3>
                        <div class="card-meta">
                            <span>${item.seller}</span>
                            <span class="card-price">${item.price}</span>
                        </div>
                    </div>
                `;
                
                card.addEventListener('click', () => {
                    showItemModal(item);
                });
                
                container.appendChild(card);
            });
        }

        // Populate categories preview
        function populateCategoriesPreview() {
            const container = document.getElementById('categories-preview-container');
            container.innerHTML = '';
            
            sampleCategories.slice(0, 5).forEach(category => {
                const card = document.createElement('div');
                card.className = 'card';
                
                card.innerHTML = `
                    <img src="${category.image}" alt="${category.name}" class="card-image">
                    <div class="card-content">
                        <h3 class="card-title">${category.name}</h3>
                        <div class="card-meta">
                            <span>${category.items} items</span>
                        </div>
                    </div>
                `;
                
                card.addEventListener('click', () => {
                    showCategoriesPage();
                });
                
                container.appendChild(card);
            });
        }

        // Populate categories page
        function populateCategoriesPage() {
            const container = document.getElementById('categories-container');
            container.innerHTML = '';
            
            sampleCategories.forEach(category => {
                const card = document.createElement('div');
                card.className = 'category-card';
                
                card.innerHTML = `
                    <img src="${category.image}" alt="${category.name}" class="category-image">
                    <div class="category-info">
                        <h3>${category.name}</h3>
                        <p>${category.description}</p>
                        <div class="category-stats">
                            <span>${category.items} items</span>
                            <span>${category.priceRange}</span>
                        </div>
                    </div>
                `;
                
                card.addEventListener('click', () => {
                    // In a real app, this would show items from this category
                    alert(`This would show all ${category.name} items`);
                });
                
                container.appendChild(card);
            });
        }

        // Search functionality
        const searchInput = document.getElementById('search-input');
        const searchButton = document.getElementById('search-button');
        const searchResults = document.getElementById('search-results');
        const resultsGrid = document.getElementById('results-grid');
        const resultsCount = document.getElementById('results-count');

        searchButton.addEventListener('click', performSearch);
        searchInput.addEventListener('keyup', (e) => {
            if (e.key === 'Enter') {
                performSearch();
            }
        });

        function performSearch() {
            const query = searchInput.value.toLowerCase().trim();
            
            if (query === '') {
                searchResults.style.display = 'none';
                return;
            }
            
            const filteredItems = sampleItems.filter(item => {
                return (
                    item.title.toLowerCase().includes(query) ||
                    item.description.toLowerCase().includes(query) ||
                    item.category.toLowerCase().includes(query) ||
                    item.tags.some(tag => tag.toLowerCase().includes(query))
                );
            });
            
            displaySearchResults(filteredItems);
        }

        function displaySearchResults(items) {
            resultsGrid.innerHTML = '';
            
            if (items.length === 0) {
                resultsCount.textContent = 'No items found';
                searchResults.style.display = 'block';
                return;
            }
            
            resultsCount.textContent = `${items.length} item${items.length !== 1 ? 's' : ''} found`;
            
            items.forEach(item => {
                const card = document.createElement('div');
                card.className = 'card';
                card.setAttribute('data-item', item.id);
                
                card.innerHTML = `
                    <img src="${item.image}" alt="${item.title}" class="card-image">
                    <div class="card-content">
                        <h3 class="card-title">${item.title}</h3>
                        <div class="card-meta">
                            <span>${item.seller}</span>
                            <span class="card-price">${item.price}</span>
                        </div>
                    </div>
                `;
                
                card.addEventListener('click', () => {
                    showItemModal(item);
                });
                
                resultsGrid.appendChild(card);
            });
            
            searchResults.style.display = 'block';
        }

        // Item modal functionality
        const itemModal = document.getElementById('item-modal');
        const closeModal = document.getElementById('close-modal');
        let currentItem = null;

        function showItemModal(item) {
            currentItem = item;
            document.getElementById('modal-image').src = item.image;
            document.getElementById('modal-title').textContent = item.title;
            document.getElementById('modal-price').textContent = item.price;
            document.getElementById('modal-description').textContent = item.description;
            document.getElementById('modal-seller').textContent = item.seller;
            document.getElementById('modal-category').textContent = item.category;
            document.getElementById('modal-condition').textContent = item.condition;
            document.getElementById('modal-location').textContent = item.location;
            
            itemModal.style.display = 'flex';
        }

        closeModal.addEventListener('click', () => {
            itemModal.style.display = 'none';
        });

        // Add to cart functionality
        document.getElementById('add-to-cart').addEventListener('click', () => {
            if (currentItem) {
                addToCart(currentItem);
                itemModal.style.display = 'none';
                alert(`${currentItem.title} added to cart!`);
            }
        });

        // Make offer functionality (opens chat)
        document.getElementById('make-offer').addEventListener('click', () => {
            if (currentItem) {
                itemModal.style.display = 'none';
                showChatModal(currentItem);
            }
        });

        // Chat modal functionality
        const chatModal = document.getElementById('chat-modal');
        const closeChat = document.getElementById('close-chat');
        const sendMessage = document.getElementById('send-message');
        const chatInput = document.getElementById('chat-input');

        function showChatModal(item) {
            document.getElementById('chat-header h3').textContent = `Chat with ${item.seller}`;
            chatModal.style.display = 'flex';
        }

        closeChat.addEventListener('click', () => {
            chatModal.style.display = 'none';
        });

        sendMessage.addEventListener('click', () => {
            const message = chatInput.value.trim();
            if (message) {
                const messagesContainer = document.getElementById('chat-messages');
                const messageElement = document.createElement('div');
                messageElement.className = 'message sent';
                messageElement.textContent = message;
                messagesContainer.appendChild(messageElement);
                chatInput.value = '';
                
                // Scroll to bottom
                messagesContainer.scrollTop = messagesContainer.scrollHeight;
                
                // Simulate seller response after a delay
                setTimeout(() => {
                    const responseElement = document.createElement('div');
                    responseElement.className = 'message received';
                    responseElement.textContent = "Thanks for your interest! What's your offer?";
                    messagesContainer.appendChild(responseElement);
                    messagesContainer.scrollTop = messagesContainer.scrollHeight;
                }, 1000);
            }
        });

        chatInput.addEventListener('keyup', (e) => {
            if (e.key === 'Enter') {
                sendMessage.click();
            }
        });

        // Shopping cart functionality
        function addToCart(item) {
            // Check if item already exists in cart
            const existingItem = shoppingCart.find(cartItem => cartItem.id === item.id);
            
            if (existingItem) {
                existingItem.quantity += 1;
            } else {
                shoppingCart.push({
                    ...item,
                    quantity: 1
                });
            }
            
            updateCartCount();
            saveCartToStorage();
        }

        function updateCartCount() {
            const cartCount = document.getElementById('cart-count');
            const totalItems = shoppingCart.reduce((total, item) => total + item.quantity, 0);
            cartCount.textContent = totalItems;
        }

        function saveCartToStorage() {
            localStorage.setItem('cuBazarCart', JSON.stringify(shoppingCart));
        }

        function loadCartFromStorage() {
            const savedCart = localStorage.getItem('cuBazarCart');
            if (savedCart) {
                shoppingCart = JSON.parse(savedCart);
                updateCartCount();
            }
        }

        // Navigation functionality
        const navLinks = document.querySelectorAll('.nav-link');
        const heroButtons = document.querySelectorAll('.hero-btn');
        const browseItemsBtn = document.getElementById('browse-items-btn');
        const sellItemBtn = document.getElementById('sell-item-btn');
        const continueShoppingBtn = document.getElementById('continue-shopping');
        const checkoutBtn = document.getElementById('checkout-btn');

        // Hide all pages initially
        function hideAllPages() {
            document.getElementById('categories-page').style.display = 'none';
            document.getElementById('cart-page').style.display = 'none';
            document.getElementById('sell-page').style.display = 'none';
            document.getElementById('account-page').style.display = 'none';
            document.getElementById('help-page').style.display = 'none';
            document.getElementById('search-results').style.display = 'none';
            document.getElementById('featured-items').style.display = 'none';
            document.getElementById('popular-categories').style.display = 'none';
        }

        function showHomePage() {
            document.getElementById('featured-items').style.display = 'block';
            document.getElementById('popular-categories').style.display = 'block';
            document.getElementById('search-container').style.display = 'block';
        }

        function showCategoriesPage() {
            hideAllPages();
            document.getElementById('categories-page').style.display = 'block';
            populateCategoriesPage();
        }

        navLinks.forEach(link => {
            link.addEventListener('click', (e) => {
                e.preventDefault();
                
                // Remove active class from all links
                navLinks.forEach(l => l.classList.remove('active'));
                
                // Add active class to clicked link
                link.classList.add('active');
                
                // Hide all pages
                hideAllPages();
                
                // Show the corresponding page
                const page = link.getAttribute('data-page');
                
                if (page === 'home') {
                    showHomePage();
                } else if (page === 'categories') {
                    showCategoriesPage();
                } else if (page === 'cart') {
                    document.getElementById('cart-page').style.display = 'block';
                    displayCartItems();
                } else if (page === 'sell') {
                    document.getElementById('sell-page').style.display = 'block';
                } else if (page === 'account') {
                    document.getElementById('account-page').style.display = 'block';
                } else if (page === 'help') {
                    document.getElementById('help-page').style.display = 'block';
                }
            });
        });

        // Hero button functionality
        browseItemsBtn.addEventListener('click', () => {
            // Show featured items and categories
            showHomePage();
            
            // Update active nav link
            navLinks.forEach(l => l.classList.remove('active'));
            document.querySelector('[data-page="home"]').classList.add('active');
        });

        sellItemBtn.addEventListener('click', () => {
            // Navigate to sell page
            hideAllPages();
            document.getElementById('sell-page').style.display = 'block';
            
            // Update active nav link
            navLinks.forEach(l => l.classList.remove('active'));
            document.querySelector('[data-page="sell"]').classList.add('active');
        });

        continueShoppingBtn.addEventListener('click', () => {
            // Navigate back to home
            hideAllPages();
            showHomePage();
            
            // Update active nav link
            navLinks.forEach(l => l.classList.remove('active'));
            document.querySelector('[data-page="home"]').classList.add('active');
        });

        checkoutBtn.addEventListener('click', () => {
            if (shoppingCart.length === 0) {
                alert('Your cart is empty!');
                return;
            }
            
            alert('Thank you for your purchase! This would proceed to checkout in a real application.');
            shoppingCart = [];
            updateCartCount();
            saveCartToStorage();
            displayCartItems();
        });

        // Display cart items
        function displayCartItems() {
            const cartItemsContainer = document.getElementById('cart-items');
            const cartSubtotal = document.getElementById('cart-subtotal');
            const cartTotal = document.getElementById('cart-total');
            
            cartItemsContainer.innerHTML = '';
            
            if (shoppingCart.length === 0) {
                cartItemsContainer.innerHTML = '<p style="text-align: center; color: var(--netflix-light-gray); padding: 2rem;">Your cart is empty</p>';
                cartSubtotal.textContent = '0';
                cartTotal.textContent = '0';
                return;
            }
            
            let subtotal = 0;
            
            shoppingCart.forEach(item => {
                const price = parseInt(item.price.replace('', ''));
                const itemTotal = price * item.quantity;
                subtotal += itemTotal;
                
                const cartItem = document.createElement('div');
                cartItem.className = 'cart-item';
                
                cartItem.innerHTML = `
                    <img src="${item.image}" alt="${item.title}" class="cart-item-image">
                    <div class="cart-item-details">
                        <h3 class="cart-item-title">${item.title}</h3>
                        <div class="cart-item-price">${item.price}</div>
                        <div class="cart-item-seller">Sold by: ${item.seller}</div>
                    </div>
                    <div class="cart-item-actions">
                        <div class="quantity-controls">
                            <button class="quantity-btn decrease-quantity" data-id="${item.id}">-</button>
                            <span class="quantity">${item.quantity}</span>
                            <button class="quantity-btn increase-quantity" data-id="${item.id}">+</button>
                        </div>
                        <button class="remove-item" data-id="${item.id}">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                `;
                
                cartItemsContainer.appendChild(cartItem);
            });
            
            cartSubtotal.textContent = `${subtotal}`;
            cartTotal.textContent = `${subtotal}`;
            
            // Add event listeners for quantity controls
            document.querySelectorAll('.decrease-quantity').forEach(btn => {
                btn.addEventListener('click', (e) => {
                    const itemId = parseInt(e.target.getAttribute('data-id'));
                    updateQuantity(itemId, -1);
                });
            });
            
            document.querySelectorAll('.increase-quantity').forEach(btn => {
                btn.addEventListener('click', (e) => {
                    const itemId = parseInt(e.target.getAttribute('data-id'));
                    updateQuantity(itemId, 1);
                });
            });
            
            document.querySelectorAll('.remove-item').forEach(btn => {
                btn.addEventListener('click', (e) => {
                    const itemId = parseInt(e.target.closest('.remove-item').getAttribute('data-id'));
                    removeFromCart(itemId);
                });
            });
        }

        function updateQuantity(itemId, change) {
            const item = shoppingCart.find(item => item.id === itemId);
            
            if (item) {
                item.quantity += change;
                
                if (item.quantity <= 0) {
                    removeFromCart(itemId);
                } else {
                    updateCartCount();
                    saveCartToStorage();
                    displayCartItems();
                }
            }
        }

        function removeFromCart(itemId) {
            shoppingCart = shoppingCart.filter(item => item.id !== itemId);
            updateCartCount();
            saveCartToStorage();
            displayCartItems();
        }

        // Account page functionality
        const accountMenuLinks = document.querySelectorAll('.account-menu a');
        const accountSections = document.querySelectorAll('.account-section');

        accountMenuLinks.forEach(link => {
            link.addEventListener('click', (e) => {
                e.preventDefault();
                
                // Remove active class from all links and sections
                accountMenuLinks.forEach(l => l.classList.remove('active'));
                accountSections.forEach(s => s.classList.remove('active'));
                
                // Add active class to clicked link
                link.classList.add('active');
                
                // Show corresponding section
                const sectionId = link.getAttribute('data-section') + '-section';
                document.getElementById(sectionId).classList.add('active');
            });
        });

        // FAQ functionality
        const faqQuestions = document.querySelectorAll('.faq-question');
        faqQuestions.forEach(question => {
            question.addEventListener('click', () => {
                const answer = question.nextElementSibling;
                const icon = question.querySelector('i');
                
                // Toggle answer visibility
                if (answer.style.display === 'block') {
                    answer.style.display = 'none';
                    icon.classList.remove('fa-chevron-up');
                    icon.classList.add('fa-chevron-down');
                } else {
                    answer.style.display = 'block';
                    icon.classList.remove('fa-chevron-down');
                    icon.classList.add('fa-chevron-up');
                }
            });
        });

        // Header scroll effect
        window.addEventListener('scroll', () => {
            const header = document.querySelector('header');
            if (window.scrollY > 50) {
                header.classList.add('scrolled');
            } else {
                header.classList.remove('scrolled');
            }
        });

        // Initialize the application
        loadCartFromStorage();
    </script>
</body>
</html>
